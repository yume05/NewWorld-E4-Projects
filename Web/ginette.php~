	$mail=$_POST['mail'];
}


if(isset($_POST['password'])){
	$password=$_POST['password'];
}

$requete = "SELECT user_id, user_type, user_nom, user_prenom, user_mail, user_tel, user_rue, user_cp, user_ville FROM user WHERE user_login = '$login' AND user_mail = '$mail' AND user_mdp = '$password';"; 
$requete1 = mysql_query($requete);

if(mysql_query($requete)){

	while ($row = mysql_fetch_assoc($requete1)) {
    		$_SESSION['id'] =  $row['user_id'];
		$_SESSION['prenom'] = $row['user_prenom'];
		$_SESSION['nom'] = $row['user_nom'];
    		// autre traitement
	}
	$_SESSION['mail'] = $mail;
	$_SESSION['connectOK']=1;
	$_SESSION['login']=$login;
 	header('Location: index.php');
}else{
	echo 'Erreur dans la connexion';
	echo $requete;
 header('Location: connexionNW.php');
}
